<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">





    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:text="Product"
                android:textColor="@color/name_text_color"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/myordeename"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="13dp"
                android:text="A Guide To Rocky Mountain Vacations"
                android:textColor="@color/name_text_color"
                android:textSize="17sp" />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"

                android:text="Quantity"
                android:textColor="@color/name_text_color"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/proqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="7dp"

                android:text="Ryan Estrada"
                android:textColor="@color/name_text_color"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"

                android:text="Price"
                android:textColor="@color/name_text_color"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/sporice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="7dp"
                android:text="Ryan Estrada"
                android:textColor="@color/name_text_color"
                android:textSize="17sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:text="Status"
                android:textColor="@color/name_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/prostatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="7dp"
                android:text="Ryan Estrada"
                android:textColor="@color/name_text_color"
                android:textSize="17sp" />



        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>